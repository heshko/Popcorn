@model SearchView
@{
    ViewData["Title"] = "Index";
}
<h1>Search result</h1>

@if (string.IsNullOrEmpty(Model.Search))
{
    <h4>No matches for @Model.Search</h4>
}

else
{

    <h4>Was found @Model.MovieList.Count() matches for <strong>@Model.Search</strong></h4>

    @foreach (var item in Model.MovieList)
    {
<div class="row border-top border-bottom my-2 py-1">
    <div class="col-2">
        <img class="img-fluid" src="@item.MoviePoster" alt="" />
    </div>
    <div class="col-10">
        <p>
        <i class="fas fa-film" style="color:#ca0202;margin-right:10px;"> <br /></i>@item.Title<br /><br />
        <i class="fas fa-at" style="color:#ca0202;margin-right:10px;"></i>@item.Actors <br /><br />
        <a href="/Movie/MovieDetails/@item.Id" class="btn btn-primary float-right">More Details</a>
        <i class="far fa-clock" style="color:#ca0202; margin-right:10px;"> </i>@item.PlayTimeLength</p>

    </div>
    

    </div>




    }

}
