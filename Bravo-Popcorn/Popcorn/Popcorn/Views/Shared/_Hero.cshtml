@model List<MovieModel>



    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="background-color: #000;">
            @{
                string isActive = "active";

                foreach (var item in Model.Take(4).OrderByDescending(x => x.Id))
                {
                    <div class="carousel-item @isActive">
                        <div class="embed-responsive embed-responsive-21by9">
                            <iframe class="embed-responsive-item" src="@item.Trailer" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>                        
                    </div>
                  
                    isActive = "";
                }
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            @*<span class="carousel-control-prev-icon" aria-hidden="true"></span>*@
            <i style="font-size: 40px; padding-left:20px; color:#FFF;" class="far fa-arrow-alt-circle-left"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            @*<span class="carousel-control-next-icon" aria-hidden="true"></span>*@
            <i style="font-size: 40px; padding-right:20px; color:#FFF;" class="far fa-arrow-alt-circle-right"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>

